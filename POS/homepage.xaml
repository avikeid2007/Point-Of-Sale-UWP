                        </ListView.ItemContainerStyle>
                    </ListView>

                    <ScrollViewer Width="0" Height="0">
                        <ScrollViewer x:Name="control"  Width="1700" Height="2190" Canvas.ZIndex="-5" >
                            <Frame x:Name="frame" Canvas.ZIndex="-5"/>
                        </ScrollViewer>

                    </ScrollViewer>

                </Grid>
            </ScrollViewer>

            <Grid.Background>
                <SolidColorBrush Color="Black" Opacity="0.75"/>
            </Grid.Background>

        </Grid>


    </Grid>
</Page>

